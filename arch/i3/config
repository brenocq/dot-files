# Lock
bindsym $mod+shift+x exec i3lock

# Wallpaper
exec_always feh --bg-fill /home/breno/Pictures/tensorcore.png

# Setup monitors
exec_always xrandr xrandr --output HDMI-0 --primary --mode 1920x1080 --pos 0x636 --rotate normal --output DP-0 --mode 1920x1080 --pos 1920x0 --rotate right --output DP-1 --off --output DP-2 --off --output DP-3 --off --output DP-4 --off --output DP-5 --off --output HDMI-1-0 --off --output DP-1-0 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off --output DP-1-4 --off --output DP-1-5 --off

# Fix bluetooth
exec_always pactl load-module module-bluetooth-discover
#exec echo -e "power on\nconnect B4:1A:1D:D0:E9:50\n" | bluetoothctl

#assign [class="spotify"] 10

# Open programs at startup
#for_window [class="firefox"] move to workspace $ws1
#for_window [class="Termite"] move to workspace $ws2
#for_window [class="Spotify"] move to workspace $ws10

# Timezone
exec timedatectl set-timezone America/Sao_Paulo

# Window compositor
exec_always picom -f

# Polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Keyboard layout toggle
exec "setxkbmap -option 'grp:alt_shift_toggle' -layout us,br"

# Gaps
gaps inner 15

# Borders
for_window [class="^.*"] border pixel 3
client.focused 			#d79951 #d79951 #ffffff #d79951 #d79951
client.focused_inactive #333333 #928374 #ffffff #928374 #928374
client.unfocused 		#928374 #928374 #ffffff #928374 #928374
